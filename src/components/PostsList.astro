---
import PostSummary from "./PostSummary.astro";

export interface Post {
  slug: string;
  data: {
    title: string;
    description?: string;
    pubDate?: Date;
    heroImage?: ImageMetadata | string;
    externalLink?: string;
  };
}

interface Props {
  posts: Post[];
}

const { posts } = Astro.props;
---

<ul>
  {posts.map((post) => <PostSummary post={post} />)}
</ul>

<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }
</style>
