---
import "./Status.scss";
import { StatusCarousel } from "./StatusCarousel";
import { FeedCard } from "./FeedCard";

const stream = await fetch("https://status.spencer.place/me")
  .then((res) => res.json())
  .catch((err) => console.error(err));

function formatDate(date: Date) {
  return date
    .toLocaleString("en-US", {
      month: "2-digit",
      day: "2-digit",
      hour: "2-digit",
      minute: "2-digit",
      hour12: false,
    })
    .replace(", ", "|")
    .replace("/", ".");
}
